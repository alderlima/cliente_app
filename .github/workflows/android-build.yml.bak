name: Android APK Release (Test Signed)

on:
  push:
    branches: [ main, master, develop ]
  pull_request:
    branches: [ main, master, develop ]

jobs:
  build:
    runs-on: ubuntu-latest

    env:
      ANDROID_SDK_ROOT: ${{ runner.temp }}/android-sdk
      ANDROID_HOME: ${{ runner.temp }}/android-sdk

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # â˜• Java
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'
          cache: gradle

      # ğŸ¦ Flutter
      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: 3.29.0
          cache: true

      # ğŸ“¦ Android SDK cmdline-tools
      - name: Install Android SDK cmdline-tools
        run: |
          mkdir -p $ANDROID_HOME/cmdline-tools
          cd $ANDROID_HOME/cmdline-tools
          curl -s https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip -o tools.zip
          unzip -q tools.zip
          mv cmdline-tools latest

      # ğŸ“¦ SDK / Build-tools / Platform / NDK
      - name: Install Android SDK packages
        run: |
          export PATH=$ANDROID_HOME/cmdline-tools/latest/bin:$PATH
          yes | sdkmanager --licenses
          sdkmanager \
            "platform-tools" \
            "platforms;android-34" \
            "build-tools;34.0.0" \
            "ndk;27.0.12077973"

      # ğŸ”‘ Keystore de TESTE
      - name: Generate test keystore
        run: |
          keytool -genkeypair \
            -alias testkey \
            -keyalg RSA \
            -keysize 2048 \
            -validity 10000 \
            -keystore android/app/test.keystore \
            -storepass android \
            -keypass android \
            -dname "CN=Test,O=Test,C=BR"

      # ğŸ§¾ key.properties
      - name: Create key.properties
        run: |
          cat <<EOF > android/key.properties
          storePassword=android
          keyPassword=android
          keyAlias=testkey
          storeFile=app/test.keystore
          EOF

      # ğŸ“¦ DependÃªncias Flutter
      - name: Flutter pub get
        run: flutter pub get

      # ğŸ”¨ Build APK RELEASE (ASSINADO)
      - name: Build APK Release
        run: flutter build apk --release

      # ğŸ“¤ Upload APK
      - name: Upload APK artifact
        uses: actions/upload-artifact@v4
        with:
          name: app-release-test-signed
          path: build/app/outputs/flutter-apk/app-release.apk
          retention-days: 30
